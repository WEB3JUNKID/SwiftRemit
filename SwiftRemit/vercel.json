{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    { "src": "server/**/*.ts", "use": "@vercel/node" },
    { "src": "client/package.json", "use": "@vercel/static-build" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/$1.ts" },
    { "source": "/(.*)", "destination": "/client/dist/$1" }
  ],
  "cleanUrls": true
}